@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@using System.Linq;
@model List<RecipeBox.Models.Recipe>

<h2>Search by Rating</h2>

@if (Model.Count > 0)
{
  <ul>
    @foreach (Recipe recipe in Model)
    {
      <li>@Html.ActionLink($"{recipe.Name} | Rating: {recipe.Rating}", "Details", new { id = recipe.RecipeId })</li>
    }
  </ul>
}
else
{
  <li>No results found</li>
}

<p>@Html.ActionLink("Back to recipe list", "Index")</p>